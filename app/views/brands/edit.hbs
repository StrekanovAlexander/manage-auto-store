<div class="row mt-5">
    <div class="col col-lg-6">
        <form action="/brands/edit" method="POST">
            <div class="mb-3">
                <label for="title" class="form-label">Наименование</label>
                <input type="text" id="title" name="title" 
                    class="form-control form-control-sm" value="{{ brand.title }}" />
                    <span class="small text-secondary">не менее 3 символов</span>
            </div>
            <div class="mb-4"> 
                <label for="origin_id" class="form-label">Страна происхождения</label>
                <select class="form-select form-select-sm" id="origin_id" name="origin_id">
                    <option value="">Выбрать...</option>
                    {{#each origins}}
                        <option value="{{ this.dataValues.id }}" {{#if (equals this.dataValues.id ../brand.origin_id)}}selected{{/if}}>
                            {{ this.dataValues.title }}
                        </option>
                    {{/each}}
                </select>
            </div>
            <div class="form-check mb-4">
                <input class="form-check-input" type="checkbox" id="activity" 
                    name="activity" {{#if brand.activity }} value="on" checked {{/if}} 
                />
                <label class="form-check-label" for="activity">
                    Активность
                </label>
            </div>
            <div class="d-flex justify-content-between">
                <a href="/brands" class="btn btn-sm btn-danger">
                   <i class="bi bi-arrow-left-square"></i> Отмена
                </a>
                <button type="submit" id="button-submit" class="btn btn-sm btn-success">
                    <i class="bi bi-save2"></i> Записать
                </button>
            </div>
            <input type="hidden" name="id" value="{{ brand.id }}" />
        </form>
    </div>
</div>