<div class="row mt-5">
    <div class="col-md-4 offset-md-4">
        <form action="/users/edit" method="POST">
            <div class="mb-3">
                <label for="username" class="form-label">Логин</label>
                <input type="text" id="username" name="username" 
                    class="form-control form-control-sm" value="{{ user.username }}" />
                <span class="small text-secondary">не менее 5 символов</span>    
            </div>
            <div class="mb-3"> 
                <label for="role_id" class="form-label">Роль</label>
                <select class="form-select form-select-sm" id="role_id" name="role_id">
                    {{#each roles}}
                        <option 
                            value="{{ this.dataValues.id }}"
                            {{#if (equals this.dataValues.id ../user.role_id )}}
                                selected
                            {{/if}}
                        >{{ this.dataValues.title }}
                        </option>
                    {{/each}}
                </select>
            </div>
            <div class="form-check mb-3">
                <input class="form-check-input" type="checkbox" id="activity" 
                    name="activity" {{#if user.activity }} value="on" checked {{/if}} 
                />
                <label class="form-check-label" for="activity">
                    Активность
                </label>
            </div>
            <div class="d-flex justify-content-between">
                <a href="/users" class="btn btn-sm btn-danger">
                    <i class="bi bi-arrow-left-square"></i> Отмена
                </a>
                <button type="submit" id="button-submit" class="btn btn-sm btn-success">
                    <i class="bi bi-save2"></i> Записать
                </button>
            </div>
            <input type="hidden" name="id" value="{{ user.id }}" />
        </form>
    </div>
</div>
