<h1><i class="bi bi-people-fill"></i> {{ title }}</h1>
<div class="row mb-2">
    <div class="col ms-auto text-end mb-2">
        <a href="/users/create" class="{{#unless access}}disabled{{/unless}}">
             <i class="bi bi-plus-circle-fill"></i> Создать
        </a>
    </div>
</div>
{{#if users}} 
<table class="table table-sm table-striped table-hover">
    <tr>
        <th scope="col">ID</th>
        <th scope="col">Имя</th>
        <th scope="col">Права</th>
        <th scope="col">Активность</th>
        <th scope="col">Время создания</th>
        <th scope="col" colspan="2">Действия</th>
    </tr>
    {{#each users}}
    {{#with this.dataValues}}
    <tr>
        <td>{{ id }}</td>
        <td>{{ username}}</td>
        <td>{{ Role.dataValues.title }}</td> 
        <td>
            {{#if activity }}
                <i class="bi bi-check-square"></i>
            {{else}}
                <i class="bi bi-square"></i>
            {{/if}}
        </td> 
        <td>{{ date created_at }} {{ time created_at }}</td> 
        <td>
            <a href="/users/edit/{{ id }}" class="{{#unless ../../access}}disabled{{/unless}}"> 
                <i class="bi bi-pen-fill"></i> Правка
            </a>
        </td>
        <td>
            <a href="/users/pwd/{{ id }}" class="{{#unless ../../access}}disabled{{/unless}}"> 
                <i class="bi bi-key-fill"></i> Пароль
            </a>
        </td>  
    {{/with}}
    </tr>
{{/each}}
</table>
{{/if }}
