<div class="row">
    <div class="col col-lg-6">
        <form action="/users/pwd" method="POST">
            <div class="mb-3">
                <label for="username" class="form-label">Имя пользователя</label>
                <input type="text" id="username" name="username" 
                    class="form-control form-control-sm" value="{{ user.username }}" readonly />
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Пароль</label>
                <input type="password" id="password" name="password" 
                    class="form-control form-control-sm" />
                <span class="small text-secondary">не менее 5 символов</span>
            </div>
            <div class="mb-4">
                <label for="password2" class="form-label">Повтор пароля</span></label>
                <input type="password" id="password2"  
                    class="form-control form-control-sm" />
                <div class="invalid-feedback">Пароли не совпадают</div>
            </div>
            <div class="d-flex justify-content-between">
                <a href="/users" class="btn btn-sm btn-danger">
                    <i class="bi bi-arrow-left-square"></i> Отмена
                </a>
                <button type="submit" id="button-submit" class="btn btn-sm btn-success" disabled>
                    <i class="bi bi-save2"></i> Записать
                </button>
            </div>
            <input type="hidden" name="id" value="{{ user.id }}" />
        </form>
    </div>
</div>
