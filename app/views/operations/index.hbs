{{#if operations}}
    <table class="table table-sm table-bordered">
        <thead>
            <tr>
                <th scope="col" class="col-1 text-end">ID. Date</th>
                <th scope="col" class="col-1 text-center">Direction</th>
                <th scope="col" class="col-2">Operation type</th>
                <th scope="col" class="col-1">Payment type</th>
                <th scope="col" class="col-1">Participant</th>
                <th scope="col" class="col-1 text-end">Amount</th>
                <th scope="col" class="col-2">Description</th>
                <th scope="col" class="col-1">Author</th>
                <th scope="col" class="col-1"></th>
            </tr>
        </thead>
        {{#each operations}}
            {{#with this.dataValues}}
                <tr>
                    <td class="text-end">{{ id }}. {{ date_reg }}</td>
                    <td class="col-1 text-center">{{ direction }}</td>
                    <td>{{ OperationType.dataValues.title }}</td>
                    <td>{{ PaymentType.dataValues.title }}</td>
                    <td>{{ Participant.dataValues.full_name }}</td>
                    <td class="text-end">{{ amount }}</td>
                    <td>
                        {{#if lot_id}}<a href="/lots/{{ lot_id }}/details">Stock No {{ Lot.dataValues.stock_id }}</a>{{/if}}
                        {{ description }}
                     </td>
                    <td>{{ User.dataValues.username }}</td>
                    <td>
                        <div class="row text-center">
                            <div class="col">
                                <a href="/operations/{{ id }}/edit" class="{{#unless ../../access}} disabled{{/unless}}" title="Edit"> 
                                    <i class="bi bi-gear"></i>
                                </a>
                            </div>
                            <div class="col">
                                <a href="/operations/{{ id }}/remove" class="text-danger {{#unless ../../access}} disabled{{/unless}}" title="Remove"> 
                                    <i class="bi bi-x-square"></i>
                                </a>
                            </div>
                        </div>
                    </td>
                </tr>
            {{/with}}
        {{/each}}
    </table>
{{/if}}
<div class="d-flex justify-content-start my-3">
    <a href="/operations/create" class="btn btn-sm btn-primary{{#unless access}} disabled{{/unless}}">
        <i class="bi bi-plus-square"></i> Create
    </a>
</div>