{{#if operations}}
    <table class="table table-sm table-bordered">
        <thead>
            <tr>
                <th class="col-1 text-end">ID. Date</th>
                <th>Customer</th>
                <th class="col-1">Participant</th>
                <th class="col-2">Operation type</th>
                <th class="col-1">Payment type</th>
                <th class="col-1 text-end">Amount</th>
                <th class="col-2">Description</th>
                <th class="col-1 text-center">Stock no</th>
                <th class="col-1">Author</th>
                <th class="col-1 text-center">Details</th>
            </tr>
        </thead>
        {{#each operations}}
            {{#with this.dataValues}}
                <tr>
                    <td class="text-end">{{ id }}. {{ date_reg }}</td>
                    <td>{{ Customer.dataValues.title }}</td>
                    <td>{{ Participant.dataValues.full_name }}</td>
                    <td>{{ OperationType.dataValues.title }}</td>
                    <td>{{ PaymentType.dataValues.title }}</td>
                    <td class="text-end">{{ amount }}</td>
                    <td>{{ description }}</td>
                    <td class="text-center">
                        {{#if lot_id}}<a href="/lots/{{ lot_id }}/details">{{ Lot.dataValues.stock_id }}</a>{{/if}}
                     </td>
                    <td>{{ User.dataValues.username }}</td>
                    <td class="text-center">
                        <a href="/operations/{{ id }}/details" class="{{#unless ../../access}} disabled{{/unless}}" title="Details"> 
                            <i class="bi bi-card-text"></i>
                        </a>
                     </td>
                </tr>
            {{/with}}
        {{/each}}
    </table>
{{/if}}
<div class="d-flex justify-content-start my-3">
    <a href="/operations/create" class="btn btn-sm btn-primary{{#unless access}} disabled{{/unless}}">
        <i class="bi bi-plus-square"></i> Create
    </a>
</div>
{{#if pages }}
<nav aria-label="Page navigation">
  <ul class="pagination pagination-sm justify-content-center">
    <li class="page-item{{#unless hasPrevPage }} disabled{{/unless}}">
      <a class="page-link" href="{{ prevPage }}" aria-label="Previous">
        <span aria-hidden="true">&laquo;</span>
      </a>
    </li>
    {{#each pages}}
    <li class="page-item{{#if (equals this.number ../paginate.page)}} active{{/if}}">
        <a class="page-link" href="{{ this.url }}">{{ this.number }}</a>
    </li>
    {{/each}}
    <li class="page-item{{#unless hasNextPage }} disabled{{/unless}}">
      <a class="page-link" href="{{ nextPage }}" aria-label="Next">
        <span aria-hidden="true">&raquo;</span>
      </a>
    </li>
  </ul>
</nav>
{{/if}}
