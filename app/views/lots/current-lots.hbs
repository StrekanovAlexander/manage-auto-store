{{#if lots }}
    <table class="table table-sm table-bordered">
        <tr>
            <th class="col-1 text-end">Stock No</th>
            <th class="col-2">Model</th>
            <th class="col-1 text-center">Date buy</th>
            <th class="col-1 text-center">Date ready</th>
            <th class="col-1 text-center">Days repair</th>
            <th class="col-1 text-center">Days sale</th>
            <th class="col-1 text-center">Days downtime</th>
            <th class="col-1 text-end">Total cost</th>
            <th class="col-1 text-end">Money price</th>
            <th></th>
        </tr>
        {{#each lots }}
            {{#with this.dataValues }}
            <tr>
                <td class="text-end">{{ stock_id }}</td>
                <td>{{ Model.dataValues.title }} ({{ year }})</td>
                <td class="text-center">{{ date_buy }}</td>
                <td class="text-center">{{ date_ready }}</td>
                <td class="text-center">{{ days_repair }}</td>
                <td class="text-center">{{ days_sale }}</td>
                <td class="text-center">{{ days_downtime }}</td>
                <td class="text-end">{{ currency total_cost }}</td>
                <td class="text-end">{{ currency money_price }}</td>
                <td></td>
            </tr>
            {{/with }}
        {{/each}}
    </table>
{{/if}}