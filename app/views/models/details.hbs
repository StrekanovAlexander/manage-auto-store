<div class="row mt-5">
    <div class="col col-lg-6">
        <div class="row mb-3">
            <div class="col">
                <label class="form-label">Наименование</label>
                <input type="text" class="form-control form-control-sm" value="{{ model.title }}" readonly>
            </div>
            <div class="col">
                <label class="form-label">Марка</label>
                <input type="text" class="form-control form-control-sm" value="{{ model.Brand.dataValues.title }}" readonly>
            </div>
        </div>
        <div class="row mb-3">
            <div class="col">
                <label class="form-label">Цилиндров</label>
                <input type="text" class="form-control form-control-sm" value="{{ model.cylinders }}" readonly>
            </div>
            <div class="col">
                <label class="form-label">ЛС</label>
                <input type="text" class="form-control form-control-sm" value="{{ model.horsepower }}" readonly>
            </div>
        </div>
        <div class="row mb-4">
            <div class="col">
                <label class="form-label">Миль на галлон</label>
                <input type="text" class="form-control form-control-sm" value="{{ model.miles_per_gallon }}" readonly>
            </div>
            <div class="col">
                <input class="form-check-input" type="checkbox" {{#if model.activity }}checked{{/if}} disabled>
                <label class="form-label">Активность</label>
            </div>
        </div>
        <div class="d-flex justify-content-between">
                <a href="/brands/{{ model.Brand.dataValues.id }}/models" class="btn btn-sm btn-danger">
                    <i class="bi bi-arrow-left-square"></i> Назад
                </a>
                <button type="submit" id="button-submit" class="btn btn-sm btn-success">
                     <i class="bi bi-pen-fill"></i> Редактировать
                </button>
        </div>
    </div>
</div>        